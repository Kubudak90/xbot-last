# ===========================================
# XBot Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Database
# ===========================================
# Local development (SQLite):
DATABASE_URL="file:./data/xbot.db"

# Production (Turso - get free at https://turso.tech):
# DATABASE_URL="libsql://your-database-name.turso.io?authToken=your-auth-token"

# ===========================================
# AI Provider API Keys
# ===========================================

# OpenAI (Required for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Optional, for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI (Optional, for Gemini models)
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-pro

# Ollama (Optional, for local models)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ===========================================
# App Configuration
# ===========================================

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development

# ===========================================
# Security
# ===========================================

# Encryption key for session data (REQUIRED, 32-byte hex minimum)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# API Secret Key for API authentication (REQUIRED for production)
# Generate with: openssl rand -hex 32
# Leave empty in development to disable API authentication
API_SECRET_KEY=

# Session secret for cookie signing
# Generate with: openssl rand -base64 32
SESSION_SECRET=

# ===========================================
# Rate Limiting
# ===========================================

# Maximum tweets per day
MAX_TWEETS_PER_DAY=50

# Maximum likes per hour
MAX_LIKES_PER_HOUR=100

# Maximum replies per hour
MAX_REPLIES_PER_HOUR=30

# ===========================================
# Scheduler Configuration
# ===========================================

# Enable tweet scheduler
SCHEDULER_ENABLED=true

# Scheduler check interval (milliseconds)
SCHEDULER_CHECK_INTERVAL_MS=60000

# ===========================================
# Browser Automation
# ===========================================

# Run browser in headless mode
BROWSER_HEADLESS=true

# Enable stealth mode to avoid detection
BROWSER_STEALTH_MODE=true

# User agent rotation interval (sessions)
BROWSER_USER_AGENT_ROTATION=5

# ===========================================
# Optional Features
# ===========================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=false
